{
	"name": "isomorphic-marketing-website",
	"version": "1.0.0",
	"description": "isomorphic marketing website",
	"main": "",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"clean": "rm -r dist",
		"build": "webpack --config webpack.config.build.js",
		"build:watch": "webpack watch --config webpack.config.build.js",
		"clean:build": "npm run clean && npm run build",
		"clean:build:watch": "npm run clean && npm run build:watch",
		"serve:client": "webpack serve --config webpack.config.serve.js --open",
		"start:server": "nodemon ./dist/server.js",
		"start:server:daemon": "pm2 start ./dist/server.js --watch && pm2 dash",
		"stop:server:daemon": "pm2 delete ./dist/server.js"
	},
